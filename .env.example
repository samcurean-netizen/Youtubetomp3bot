# Telegram Bot Configuration
# Required: Get this from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# OpenAI API Configuration (optional, for future AI features)
OPENAI_API_KEY=

# Database Configuration (optional, for persistent storage)
DATABASE_PATH=bot_data.db

# Flask Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=8080

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# File Management
# Set to 'false' to keep downloaded files instead of deleting them
DELETE_FILES_AFTER_SEND=true

# Download Directory
DOWNLOAD_DIR=downloads
